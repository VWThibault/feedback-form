<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Team Feedback Form</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 700px;
            margin: 0 auto;
            background: white;
            border-radius: 12px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            padding: 30px;
        }
        
        .header {
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 3px solid #667eea;
        }
        
        .header h1 {
            color: #2d3748;
            font-size: 28px;
            margin-bottom: 10px;
        }
        
        .header p {
            color: #718096;
            font-size: 14px;
        }
        
        .section {
            margin-bottom: 30px;
        }
        
        .section-title {
            color: #667eea;
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }
        
        .section-title::before {
            content: '';
            width: 4px;
            height: 24px;
            background: #667eea;
            margin-right: 10px;
            border-radius: 2px;
        }
        
        label {
            display: block;
            color: #4a5568;
            font-weight: 500;
            margin-bottom: 8px;
            font-size: 15px;
        }
        
        input[type="text"],
        textarea,
        select {
            width: 100%;
            padding: 12px;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            font-size: 15px;
            transition: all 0.3s;
            font-family: inherit;
        }
        
        input[type="text"]:focus,
        textarea:focus,
        select:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }
        
        textarea {
            resize: vertical;
            min-height: 100px;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .radio-group {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        
        .radio-option {
            display: flex;
            align-items: center;
            padding: 12px;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .radio-option:hover {
            background: #f7fafc;
            border-color: #cbd5e0;
        }
        
        .radio-option input[type="radio"] {
            margin-right: 10px;
            width: 20px;
            height: 20px;
            cursor: pointer;
        }
        
        .radio-option input[type="radio"]:checked + label {
            color: #667eea;
            font-weight: 600;
        }
        
        .submit-btn {
            width: 100%;
            padding: 15px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
        }
        
        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
        }
        
        .submit-btn:active {
            transform: translateY(0);
        }
        
        .success-message {
            display: none;
            background: #48bb78;
            color: white;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
            margin-top: 20px;
            font-weight: 500;
        }
        
        .anonymous-note {
            background: #edf2f7;
            padding: 12px;
            border-radius: 8px;
            font-size: 13px;
            color: #4a5568;
            margin-bottom: 20px;
        }
        
        @media (max-width: 600px) {
            .container {
                padding: 20px;
            }
            
            .header h1 {
                font-size: 24px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Team Feedback Form</h1>
            <p>Your voice matters. Help us create a better workplace together.</p>
        </div>
        
        <form id="feedbackForm">
            <!-- Name Section -->
            <div class="section">
                <div class="form-group">
                    <label for="name">Your Name (Optional - Leave blank to remain anonymous)</label>
                    <div class="anonymous-note">
                        ðŸ’¡ Feel free to submit anonymously. Your honest feedback helps us improve!
                    </div>
                    <input type="text" id="name" name="name" placeholder="Enter your name or leave blank">
                </div>
            </div>
            
            <!-- First Shift Experience -->
            <div class="section">
                <h2 class="section-title">First Shift Experience</h2>
                <div class="form-group">
                    <label>How would you rate your first shift experience?</label>
                    <select name="firstShiftRating" required>
                        <option value="">Select rating...</option>
                        <option value="5">Excellent</option>
                        <option value="4">Good</option>
                        <option value="3">Average</option>
                        <option value="2">Below Average</option>
                        <option value="1">Poor</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="firstShiftComments">Please share any details about your first shift experience:</label>
                    <textarea id="firstShiftComments" name="firstShiftComments" placeholder="What went well? What could have been better?"></textarea>
                </div>
            </div>
            
            <!-- Staffing Team Communication -->
            <div class="section">
                <h2 class="section-title">Staffing Team Communication</h2>
                <div class="form-group">
                    <label>How would you rate your experience liaising with the staffing team when rostered on?</label>
                    <select name="staffingRosterRating" required>
                        <option value="">Select rating...</option>
                        <option value="5">Excellent</option>
                        <option value="4">Good</option>
                        <option value="3">Average</option>
                        <option value="2">Below Average</option>
                        <option value="1">Poor</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>How would you rate the process when you need to cancel a shift ahead of time?</label>
                    <select name="cancelShiftRating" required>
                        <option value="">Select rating...</option>
                        <option value="5">Very Easy</option>
                        <option value="4">Easy</option>
                        <option value="3">Neutral</option>
                        <option value="2">Difficult</option>
                        <option value="1">Very Difficult</option>
                        <option value="N/A">Not Applicable - Haven't needed to cancel</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>When you provide feedback or raise concerns with the staffing team, do you feel heard?</label>
                    <div class="radio-group">
                        <label class="radio-option">
                            <input type="radio" name="feedbackHeard" value="Always" required>
                            <span>Always</span>
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="feedbackHeard" value="Usually" required>
                            <span>Usually</span>
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="feedbackHeard" value="Sometimes" required>
                            <span>Sometimes</span>
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="feedbackHeard" value="Rarely" required>
                            <span>Rarely</span>
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="feedbackHeard" value="Never" required>
                            <span>Never</span>
                        </label>
                    </div>
                </div>
            </div>
            
            <!-- Leadership Support -->
            <div class="section">
                <h2 class="section-title">Leadership & Support</h2>
                <div class="form-group">
                    <label>Do you feel supported by your leadership team?</label>
                    <div class="radio-group">
                        <label class="radio-option">
                            <input type="radio" name="leadershipSupport" value="Strongly Agree" required>
                            <span>Strongly Agree</span>
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="leadershipSupport" value="Agree" required>
                            <span>Agree</span>
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="leadershipSupport" value="Neutral" required>
                            <span>Neutral</span>
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="leadershipSupport" value="Disagree" required>
                            <span>Disagree</span>
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="leadershipSupport" value="Strongly Disagree" required>
                            <span>Strongly Disagree</span>
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label>Do you feel heard by your leadership team?</label>
                    <div class="radio-group">
                        <label class="radio-option">
                            <input type="radio" name="leadershipHeard" value="Always" required>
                            <span>Always</span>
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="leadershipHeard" value="Usually" required>
                            <span>Usually</span>
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="leadershipHeard" value="Sometimes" required>
                            <span>Sometimes</span>
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="leadershipHeard" value="Rarely" required>
                            <span>Rarely</span>
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="leadershipHeard" value="Never" required>
                            <span>Never</span>
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label>Are you properly briefed before each shift?</label>
                    <div class="radio-group">
                        <label class="radio-option">
                            <input type="radio" name="briefingQuality" value="Always" required>
                            <span>Always - I feel fully prepared</span>
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="briefingQuality" value="Usually" required>
                            <span>Usually - Minor details sometimes missing</span>
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="briefingQuality" value="Sometimes" required>
                            <span>Sometimes - Often missing important information</span>
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="briefingQuality" value="Rarely" required>
                            <span>Rarely - Briefings are insufficient</span>
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="briefingQuality" value="Never" required>
                            <span>Never - No proper briefing provided</span>
                        </label>
                    </div>
                </div>
            </div>
            
            <!-- Grooming & Uniform -->
            <div class="section">
                <h2 class="section-title">Grooming & Uniform Standards</h2>
                <div class="form-group">
                    <label>Are the grooming and uniform expectations clear to you?</label>
                    <div class="radio-group">
                        <label class="radio-option">
                            <input type="radio" name="uniformClarity" value="Very Clear" required>
                            <span>Very Clear - I know exactly what's expected</span>
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="uniformClarity" value="Mostly Clear" required>
                            <span>Mostly Clear - A few minor questions</span>
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="uniformClarity" value="Somewhat Unclear" required>
                            <span>Somewhat Unclear - Need more guidance</span>
                        </label>
                        <label class="radio-option">
                            <input type="radio" name="uniformClarity" value="Very Unclear" required>
                            <span>Very Unclear - Confused about expectations</span>
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="uniformFeedback">Any specific questions or feedback about grooming/uniform standards?</label>
                    <textarea id="uniformFeedback" name="uniformFeedback" placeholder="Share any confusion or suggestions..."></textarea>
                </div>
            </div>
            
            <!-- Continuous Improvement -->
            <div class="section">
                <h2 class="section-title">Continuous Improvement</h2>
                <div class="form-group">
                    <label for="improvements">What could be improved? What would make your job easier or more enjoyable?</label>
                    <textarea id="improvements" name="improvements" placeholder="Be specific - every suggestion helps!" required></textarea>
                </div>
                <div class="form-group">
                    <label for="keepDoing">What's going well that we should keep doing?</label>
                    <textarea id="keepDoing" name="keepDoing" placeholder="Tell us what you appreciate!" required></textarea>
                </div>
            </div>
            
            <!-- Additional Feedback -->
            <div class="section">
                <h2 class="section-title">Additional Feedback</h2>
                <div class="form-group">
                    <label for="additionalFeedback">Any other feedback that could help us deliver perfect events and improve our culture?</label>
                    <textarea id="additionalFeedback" name="additionalFeedback" placeholder="Your insights are valuable - share anything else on your mind..."></textarea>
                </div>
            </div>
            
            <button type="submit" class="submit-btn">Submit Feedback</button>
            
            <div class="success-message" id="successMessage">
                âœ“ Thank you! Your feedback has been received and will help us improve.
            </div>
        </form>
    </div>
    
    <script>
        document.getElementById('feedbackForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Collect form data
            const formData = new FormData(this);
            const data = {};
            
            for (let [key, value] of formData.entries()) {
                data[key] = value;
            }
            
            // Add timestamp
            data.timestamp = new Date().toISOString();
            
            // IMPORTANT: Replace YOUR_GOOGLE_SCRIPT_URL with your actual Apps Script URL
            const SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbwYje7KTzUfMf8yxymLmzbrjfcnxx_gBHX5Ib4RF9Hqw6_T4PTBbUKQy6sbjkc3K8E2/exec';
            
            // Send to Google Sheets
            fetch(SCRIPT_URL, {
                method: 'POST',
                mode: 'no-cors',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data)
            })
            .then(() => {
                // Show success message
                document.getElementById('successMessage').style.display = 'block';
                
                // Scroll to success message
                document.getElementById('successMessage').scrollIntoView({ behavior: 'smooth' });
                
                // Reset form after 2 seconds
                setTimeout(() => {
                    this.reset();
                    setTimeout(() => {
                        document.getElementById('successMessage').style.display = 'none';
                    }, 3000);
                }, 2000);
            })
            .catch(error => {
                console.error('Error:', error);
                alert('There was an error submitting your feedback. Please try again or contact IT support.');
            });
        });
    </script>
</body>
</html>